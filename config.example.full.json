{
  "_comment": "Full nanobot configuration example with NVIDIA API",
  
  "providers": {
    "nvidia": {
      "api_key": "nvapi-YOUR_API_KEY_HERE",
      "api_base": "https://integrate.api.nvidia.com/v1"
    },
    "openrouter": {
      "api_key": "",
      "api_base": "https://openrouter.ai/api/v1"
    },
    "anthropic": {
      "api_key": "",
      "api_base": null
    }
  },
  
  "agents": {
    "defaults": {
      "workspace": "~/.nanobot/workspace",
      "model": "z-ai/glm4.7",
      "max_tokens": 16384,
      "temperature": 1.0,
      "max_tool_iterations": 20
    }
  },
  
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "YOUR_BOT_TOKEN_FROM_BOTFATHER",
      "allow_from": []
    },
    "whatsapp": {
      "enabled": false,
      "bridge_url": "ws://localhost:3001",
      "allow_from": []
    }
  },
  
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  },
  
  "tools": {
    "web": {
      "search": {
        "api_key": "YOUR_BRAVE_SEARCH_API_KEY",
        "max_results": 5
      }
    }
  }
}
